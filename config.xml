<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "4QUYTEANK9.com.thailandpost.emo"
    version   = "1.1.5">

	<name>Thailandpost EMO</name>

	<description>
	โปรแกรม บริษัท ไปรษณีย์ไทย จำกัด
	</description>

	<author href="www.aseancloud.com" email="support@aseancloud.com">
	Branstream Co.,Ltd.
	</author>
	<plugins>
		<plugin name="Notification" value="org.apache.cordova.Notification"/>
		<plugin name="Notification" value="CDVNotification" />
	</plugins>

	<access origin="*" />
	<access origin="*" subdomains="true" />
	<icon src="icon.png" />
	
	<gap:splash 
		src="resources/splashScreen/android/screen-ldpi-portrait.png"  
		gap:platform="android" 
		gap:density="ldpi" />
    <gap:splash 
		src="resources/splashScreen/android/screen-mdpi-portrait.png"  
		gap:platform="android" 
		gap:density="mdpi" />
    <gap:splash 
		src="resources/splashScreen/android/screen-hdpi-portrait.png"  
		gap:platform="android" 
		gap:density="hdpi" />
    <gap:splash 
		src="resources/splashScreen/android/screen-xhdpi-portrait.png" 
		gap:platform="android" 
		gap:density="xhdpi" />
	<gap:splash src="resources/splashScreen/android/screen-xhdpi-portrait.png" gap:platform="ios" width="1024" height="768" />
	<gap:splash src="resources/splashScreen/android/screen-xhdpi-portrait.png" gap:platform="ios" width="768" height="1024" />
	
	<preference name="permissions" value="none"/>
	<preference name="orientation" value="portrait" />
	<preference name="target-device" value="universal" />
	<preference name="fullscreen" value="true" />		

	<!-- to enable individual permissions use the following examples -->
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
		

</widget>
